{
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "./build",
    "allowJs": true,
    "target": "ES6",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "noEmitOnError": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
  },
  "include": ["./src/**/*", "./server.ts"]
}
